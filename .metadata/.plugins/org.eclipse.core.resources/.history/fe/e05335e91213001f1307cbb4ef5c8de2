#ifndef LCD_H_
#define LCD_H_

#include <cstdint>

namespace blib
{
    class Lcd
    {
        public:
            enum class LcdType
            {
                LCD_TYPE_1602, LCD_TYPE_2004, LCD_TYPE_UNDEFINED,
            };
            Lcd(LcdType type);
            virtual ~Lcd();

            void
            private:
            uint8_t mLcdAddress;
            LcdType mLcdType;

    };

}    // namespace blib

#endif /* LCD_H_ */

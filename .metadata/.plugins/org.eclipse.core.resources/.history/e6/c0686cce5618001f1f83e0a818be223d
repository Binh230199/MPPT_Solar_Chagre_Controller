#ifndef RTC_H_
#define RTC_H_

#include "main.h"

extern RTC_HandleTypeDef hrtc;

namespace blib
{
    class Rtc
    {
        public:
            Rtc();
            ~Rtc();
            void readTime();
            void setTime(uint8_t hour, uint8_t minute, uint8_t date, uint8_t month, uint8_t year);

            RTC_HandleTypeDef *mHrtc;
            uint8_t mHour;
            uint8_t mMinute;
            uint8_t mDate;
            uint8_t mMonth;
            uint8_t mYear;
            static void incrementParameter(void)
            {
                // Increment the selected parameter
                switch (selectedParameter)
                {
                    case 0:    // Hour
                        hour = (hour + 1) % 24;
                        break;
                    case 1:    // Minute
                        minute = (minute + 1) % 60;
                        break;
                    case 2:    // Date
                        date = (date + 1)
                                % (isLeapYear(year) && month == 2 ?
                                        30 :
                                        (month == 2 ?
                                                29 :
                                                (month == 4 || month == 6 || month == 9
                                                        || month == 11 ? 30 : 31)));
                        if (date == 0)
                            date = 1;
                        break;
                    case 3:    // Month
                        month = (month + 1) % 13;
                        if (month == 0)
                            month = 1;
                        break;
                    case 4:    // Year
                        year = (year + 1) % 100;
                        break;
                }
            }

            static void decrementParameter(void)
            {
                // Decrement the selected parameter
                switch (selectedParameter)
                {
                    case 0:    // Hour
                        hour = (hour + 23) % 24;
                        break;
                    case 1:    // Minute
                        minute = (minute + 59) % 60;
                        break;
                    case 2:    // Date
                        date = (date
                                + (isLeapYear(year) && month == 2 ?
                                        29 :
                                        (month == 2 ?
                                                28 :
                                                (month == 4 || month == 6 || month == 9
                                                        || month == 11 ? 29 : 30))) - 1)
                                % (isLeapYear(year) && month == 2 ?
                                        30 :
                                        (month == 2 ?
                                                29 :
                                                (month == 4 || month == 6 || month == 9
                                                        || month == 11 ? 30 : 31))) + 1;
                        break;
                    case 3:    // Month
                        month = (month + 12) % 13;
                        if (month == 0)
                            month = 1;
                        break;
                    case 4:    // Year
                        year = (year + 99) % 100;
                        break;
                }
            }

        private:
            bool isLeapYear(uint8_t year);
            bool isTimeValid(uint8_t hour, uint8_t minute, uint8_t date, uint8_t month,
                    uint8_t year);
    };
}

#endif /* RTC_H_ */

#ifndef LCD_H_
#define LCD_H_

#include <cstdint>

namespace blib
{
    class Lcd
    {
        public:
            enum class LcdType
            {
                LCD_TYPE_1602, LCD_TYPE_2004, LCD_TYPE_UNDEFINED,
            };
            Lcd(LcdType type);
            virtual ~Lcd();

//            void
        private:
            LcdType mLcdType;
            uint8_t mLcdAddress;
            uint8_t mEntryMode;
            uint8_t mDisplayControl;
            uint8_t mFunctionSet;
            uint8_t blackLight;
            uint8_t mRow;
            uint8_t mCol;
    };

}    // namespace blib

#endif /* LCD_H_ */
